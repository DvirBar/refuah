{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "double"],
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "no-unused-vars": "off",
        "no-underscore-dangle": "off",
        "no-param-reassign": ["error", { "props": false }],
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"],
        "import/prefer-default-export": "off",
        "indent": ["error", 4]
    },
    "settings": {
        "import/resolver": {
          "node": {
            "paths": ["src"]
          }
        }
      }
}
